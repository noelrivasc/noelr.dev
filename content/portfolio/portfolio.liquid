---js
const tags = "pages";
const eleventyNavigation = {
key: "Portfolio",
order: 2
};
---

<div class="container mx-auto max-w-5xl px-4 lg:px-0">
	<section class="my-12 md:my-16 space-y-4">
		<h1 class="font-serif text-heading text-4xl md:text-5xl font-bold tracking-tight">
			Portfolio
		</h1>
		<p class="font-thin text-xl md:text-2xl leading-relaxed max-w-3xl">
			I build web applications for climate nonprofits, civic tech organizations, and mission-driven startups. Here are examples of my work.
		</p>
	</section>

	<!-- AI / LLM -->
	<section class="my-12 md:my-16 space-y-12">
		<div>
			<h2 class="text-3xl md:text-4xl font-bold font-serif text-heading tracking-tight mb-2">
				Generative AI
			</h2>
			<p class="font-thin text-base md:text-lg text-body-subtle">
				Tools and research involving large language models.
			</p>
		</div>

		<div>
		{% for project in collections.llmProject %}
			{{ project.templateContent }}
		{% endfor %}
		</div>
	</section>

	<!-- Databases -->
	<section class="my-12 md:my-16 space-y-12">
		<div>
			<h2 class="text-3xl md:text-4xl font-bold font-serif text-heading tracking-tight mb-2">
				Databases
			</h2>
			<p class="font-thin text-base md:text-lg text-body-subtle">
				Structured systems for managing and accessing information.
			</p>
		</div>

		<div>
		{% for project in collections.databaseProject %}
			{{ project.templateContent }}
		{% endfor %}
		</div>
	</section>

	<!-- Maps -->
	<section class="my-12 md:my-16 space-y-12">
		<div>
			<h2 class="text-3xl md:text-4xl font-bold font-serif text-heading tracking-tight mb-2">
				Maps
			</h2>
			<p class="font-thin text-base md:text-lg text-body-subtle">
				Interactive mapping applications for spatial data and decision-making.
			</p>
		</div>

		<div>
		{% for project in collections.mapProject %}
			{{ project.templateContent }}
		{% endfor %}
		</div>
	</section>

</div>

{% js %}
{% include "content/portfolio/components/carousel.js" %}
{% endjs %}
