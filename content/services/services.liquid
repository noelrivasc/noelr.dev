---js
const title = "Services - Noel Rivas";
const tags = "pages";
const eleventyNavigation = {
key: "Services",
order: 3
};
---

<div class="container mx-auto max-w-5xl px-4">
	<section class="py-12 md:py-16">
		<h1 class="font-serif text-heading text-4xl md:text-5xl font-bold tracking-tight">
			Services
		</h1>
		<p class="font-thin text-xl md:text-2xl leading-relaxed max-w-3xl">
			I help climate nonprofit and startup leaders turn ideas into working software.
		</p>
	</section>

	<!-- In-page navigation -->
	<nav class="my-8 mb-24 p-4 border border-c03 rounded-lg bg-gradient-to-t dark:from-white/7 to-white/3 shadow-sm">
		<ul class="list-none flex flex-col md:flex-row md:flex-wrap gap-2 md:gap-24 text-lg font-light">
			<li><a href="#consultation-call" class="text-body-subtle hover:text-body transition-colors">Consultation Call</a></li>
			<li><a href="#clarity-workshop" class="text-body-subtle hover:text-body transition-colors">Clarity Workshop</a></li>
			<li><a href="#project-development" class="text-body-subtle hover:text-body transition-colors">Full Project Development</a></li>
		</ul>
	</nav>

	<!-- Consultation Call -->
	{% render './call' %}

	<!-- Foundations and Discovery -->
	{% render './clarity-workshop' %}

	<!-- Full Project Development -->
	{% render './project' %}

	<section class="my-12 md:my-16">
		<div class="max-w-3xl mx-auto flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
			<p class="font-thin text-base md:text-lg text-body-subtle">
				Not ready to schedule a call? <span class="font-normal">Explore some of my work:</span>
			</p>
			<a href="/portfolio/" class="md:text-lg p-2 border-1 border-c02 hover:bg-c01 transition-colors shadow-md rounded-md">
				Portfolio ➡️
			</a>
		</div>
	</section>
</div>
