{% css %}
img.portrait {
	height: auto;
	max-width: 250px
}
.page-links {
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	gap: 1em;
	margin: 1.5em 0;
}
a[href].button-detail,
a[href].button-detail:visited {
	flex-basis: auto;
	color: var(--text-color-link);
	border: 1px solid var(--text-color-link);
	border-radius: 0.25em;
	padding: 0.5em;
	text-decoration: none;
	transition: all 0.5s;
}
a[href].button-detail:hover {
	border-color: var(--text-color-link-active);
	color: var(--text-color-link-active);
	padding: 0.5em 1em;
}
a.button-detail .icon {
	display: inline-block;
	margin-left: 1em;
	width: 1em;
	height: 1em;
}
a.button-detail .icon svg path {
	fill: currentColor;
}
a[href].button-schedule-call,
a[href].button-schedule-call:visited {
	display: inline-block;
	border: 1px solid var(--borders-color);
	border-radius: 0.25em;
	background-color: var(--text-color-link);
	color: var(--background-color);
	padding: 0.5em 1.5em;
	margin-top: 1em;
	text-decoration: none;
	transition: all 0.5s;
}
a[href].button-schedule-call:hover {
	background-color: var(--text-color-link-active);
	color: var(--background-color);
	padding: 0.5em 3em;
}
{% endcss %}

