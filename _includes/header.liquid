<header class="bg-ground">
	<nav aria-label="Global" class="mx-auto flex max-w-6xl items-center justify-between gap-x-6 p-6 lg:px-8">
		<div class="flex lg:flex-1">
			<a href="/" class="-m-1.5 p-1.5">
				<span class="sr-only">Noel Rivas</span>
				<img eleventy:ignore src="/img/motmot-a.svg" width="60" height="78" />
			</a>
		</div>

		<div class="hidden lg:flex lg:gap-x-12">
			{%- for entry in navPages %}
				<a href="{{ entry.url }}" {% if entry.url == page.url %}aria-current="page"{% endif %} class="text-lg text-body-subtle hover:text-orange transition-colors">{{ entry.title }}</a>
			{%- endfor %}
		</div>

		<div class="flex flex-1 items-center justify-end gap-x-6">
			<a href="https://calendar.app.google/EvzyJeS767M8bgcQ7" class="rounded-md bg-cta px-3 py-2 text-sm font-semibold text-body-inverted shadow-xs hover:opacity-80 transition-opacity focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green">Schedule Call</a>
		</div>
		<div class="flex lg:hidden">
			<button type="button" command="show-modal" commandfor="mobile-menu" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-body-subtle ">
				<span class="sr-only">Open main menu</span>
				<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6">
					<path d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" stroke-linecap="round" stroke-linejoin="round" />
				</svg>
			</button>
		</div>

	</nav>

	<el-dialog>
		<dialog id="mobile-menu" class="backdrop:bg-transparent lg:hidden">
			<div tabindex="0" class="fixed inset-0 focus:outline-none">
				<el-dialog-panel class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-ground dark:bg-c01 p-6 sm:max-w-sm sm:ring-3 sm:ring-c02">
					<div class="flex items-center justify-end gap-x-6">
						<a href="#" class="mr-auto -m-1.5 p-1.5 sm:opacity-0">
							<span class="sr-only">Noel Rivas</span>
							<img eleventy:ignore src="/img/motmot-a.svg" width="60" height="78" />
						</a>
						<a href="https://calendar.app.google/EvzyJeS767M8bgcQ7" class="rounded-md bg-cta px-3 py-2 text-sm font-semibold text-body-inverted shadow-xs hover:opacity-80 transition-opacity focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green">Schedule Call</a>
						<button type="button" command="close" commandfor="mobile-menu" class="-m-2.5 rounded-md p-2.5 text-body-subtle ">
							<span class="sr-only">Close menu</span>
							<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6">
								<path d="M6 18 18 6M6 6l12 12" stroke-linecap="round" stroke-linejoin="round" />
							</svg>
						</button>
					</div>
					<div class="mt-6 flow-root">
						<div class="-my-6 divide-y divide-gray-500/10 ">
							<div class="space-y-2 py-6">
								{% for entry in navPages %}
									<a href="{{ entry.url }}" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-body-subtle hover:text-orange ">{{ entry.title }}</a>
								{% endfor %}
							</div>
						</div>
					</div>
				</el-dialog-panel>
			</div>
		</dialog>
	</el-dialog>
</header>
